/* pages/login/login.wxss */
.container {
	position: relative;
	height: 100vh;
	background: rgba(110, 160, 218, 0.39);
	display: flex;
	flex-direction: column;
	align-items: center;
	/* justify-content: center; */
}

.logo_wrap {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	margin-top: 100rpx;
}

.logo1 {
	height: 80rpx;
}

.logo2 {
	width: 400rpx;
	height: 100rpx;
}

.main {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	background: #fff;
	width: 600rpx;
	height: 400rpx;
	border-radius: 24rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.weui-btn {
	position: absolute;
	bottom: 180rpx;
	left: 50%;
	transform: translateX(-50%);
}